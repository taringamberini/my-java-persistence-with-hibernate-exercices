<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601} [%thread] %-5level %message {%class:%line} %n</pattern>
        </encoder>
    </appender>
    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="com.taringamberini.reading.jph" level="DEBUG" />
    <logger name="org.hibernate" level="INFO" />
</configuration>